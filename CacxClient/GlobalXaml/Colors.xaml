<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region ErrorColor-->
    <Color x:Key="DefaultErrorColor">#C41E3A</Color>
    <SolidColorBrush x:Key="DefaultErrorBrush" Color="{StaticResource DefaultErrorColor}"/>

    <Color x:Key="AnimatedErrorColor">#ea171f</Color>
    <SolidColorBrush x:Key="AnimatedErrorBrush" Color="{StaticResource AnimatedErrorColor}"/>

    <SolidColorBrush x:Key="WindowBrush">#1f1e1f</SolidColorBrush>
    <!--#endregion-->
</ResourceDictionary>