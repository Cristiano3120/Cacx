<UserControl x:Class="CacxClient.Windows.LoginWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:CacxClient.Windows"
                  xmlns:cc="clr-namespace:CacxClient.CostumComponents"
                  mc:Ignorable="d">
    <Grid>
        <TextBlock Foreground="{StaticResource DefaultErrorBrush}" Visibility="Hidden"
           TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"
           Margin="0, 100, 0, 0" Name="InfoTextBlock" Text="This is a test!"/>

        <cc:TextBoxTextBlock x:Name="EmailTextBox" Label="Email:" Width="200" Height="35" Margin="0, 0, 0, 100"/>
        <cc:TextBoxTextBlock x:Name="PasswordTextBox" Label="Password:" Width="200" Height="35" Margin="0, 50, 0, 0"/>

        <TextBlock FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 102, 0, 0">
            <Hyperlink x:Name="CreateAccHyperlink">
                No account? Create one here
            </Hyperlink>
        </TextBlock>

        <Button x:Name="LoginBtn" Content="Login" Width="75" Height="30" Margin="0, 210, 0, 0"/>
    </Grid>
</UserControl>
