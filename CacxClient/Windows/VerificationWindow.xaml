<local:BaseWindow x:Class="CacxClient.Windows.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CacxClient.Windows"
        xmlns:cc="clr-namespace:CacxClient.CostumComponents"
        mc:Ignorable="d"
        Title="VerificationWindow" Height="450" Width="800" Style="{StaticResource ResourceKey=SmallWindowStyle}">
    <Grid>
        <Button x:Name="GoBackBtn" Background="Transparent" FontSize="27"
            Content="🡨" Width="35" Height="35" Margin="10, 10, 0, 0" 
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Style="{StaticResource TransparentBtnStyle}"/>
        
        <TextBlock Text="A verification code was sent to your email" Margin="0, 0, 0, 70"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <cc:TextBoxTextBlock x:Name="CodeTextBox" Width="220" Height="35" Label="Code" Margin="0, 50, 0, 0"/>

        <Button x:Name="VerifyBtn" Content="Verify" Width="70" Height="35" Margin="0, 150, 0, 0"/>
    </Grid>
</local:BaseWindow>
